@model BPaasInsurance.Models.PolicyDetailsViewModel

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        th, td {
            padding: 5px;
        }
    </style>
    <script type="text/javascript">
        function setTextBg() {
            var color = document.getElementById("txtTestValue").value; // cached

            // The working function for changing background color.
            document.bgColor = "bg-danger text-white";

            // The code I'd like to use for changing the text simultaneously - however it does not work.
            document.getElementById("coltext").style.color = color;
        }
    </script>
</head>
<body onload="setTextBg()">

    <div class="container-fluid">
        @*<div class="row">

                <div class="pull-left bg-danger" style="width:30%">




                </div>
                <div class="pull-right bg-info" style="width:70%">


                </div>


            </div>*@

        <div class="parent-container d-flex">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <nav>
                            <div class="nav nav-tabs" style="border-radius: 5px; background-color: #d9edf7" id="nav-tab" role="tablist">
                                <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#medical" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Medical</button>
                                <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#financial" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Financial</button>
                                <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#proposal" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Proposal Details</button>
                                <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#casesummary" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Case Summary</button>
                            </div>
                        </nav>
                        <div class="tab-content border border-top-0" style="border-radius:5px" id="nav-tabContent">

                            <div class="tab-pane fade show active" id="medical" role="tabpanel" aria-labelledby="nav-home-tab">
                                @*<div class="panel-group">*@
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <br />
                                        &nbsp;&nbsp;&nbsp;
                                        @*@Html.RadioButtonFor(model => model.Gender, "Male")
                    @Html.RadioButtonFor(model => model.Gender, "Male")*@
                                        <input checked="checked"
                                               id="Gender"
                                               name="Gender"
                                               type="radio"
                                               value="Male" />&nbsp;<label>Blood Report</label>
                                        &nbsp;
                                        <input id="Gender"
                                               name="Gender"
                                               type="radio"
                                               value="Female" />&nbsp;<label>ECG Report</label>
                                    </div><br />
                                    <div class="panel-body border" style="width: 95%; margin: 0 auto; border-radius: 5px; background-color: #2f4f4f">
                                        <table id="example" class="display cell-border" style="width: 90%; margin: 0 auto">
                                            <thead class="text-white">
                                                <tr>

                                                    <th>Test Name</th>
                                                    <th>Values</th>
                                                    <th>Range</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                    <div class="panel-body border overflow-auto" style="width: 95%; margin: 0 auto; border-radius: 10px; background-color: white; height:245px;">

                                        <table id="example" class="display cell-border" style="width: 90%; margin: 0 auto">

                                            <tbody>
                                                @foreach (var item in Model.med_Report_Details)
                                                {
                                                    @Html.HiddenFor(model => item.TestName)
                                                    <tr>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TestName)
                                                        </td>
                                                        <td>
                                                            @{

                                                                string textBoxClass = item.HealthStatus == "Normal" ? "form-control text-white bg-success" : (item.HealthStatus == "Abnormal") ? "bg-danger text-white form-control" : "form-control";
                                                                if (item.StringTestValue == "" || item.StringTestValue == null)
                                                                {
                                                                    @Html.TextBox("txtTestValue", Convert.ToString(item.NumericTestValue.Value), new { @style = "  width: 130px;text-align: center;", @class = textBoxClass })
                                                                }
                                                                else
                                                                {
                                                                    @Html.TextBox("txtTestValue", Convert.ToString(item.StringTestValue), new { @style = " width: 130px;text-align: center; ", @class = textBoxClass })
                                                                }
                                                            }
                                                        </td>
                                                        <td style="text-align:center">
                                                            @{

                                                                if (item.StringTestValue == "" || item.StringTestValue == null)
                                                                {
                                                                    @(item.RangeFrom + " - " + item.RangeTill)
                                                                }
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                    <br />

                                    &nbsp;&nbsp;&nbsp;
                                    <button type="button" class="btn btn-success">Save</button>
                                    <button type="button" class="btn btn-secondary">Reset</button>
                                    <br />
                                    <br />

                                </div>

                                @*</div>*@
                            </div>
                            <div class="tab-pane fade" id="financial" role="tabpanel" aria-labelledby="nav-profile-tab">
                               Financial
                            </div>
                            <div class="tab-pane fade" id="proposal" role="tabpanel" aria-labelledby="nav-contact-tab">
                                Proposal
                            </div>
                            <div class="tab-pane fade" id="casesummary" role="tabpanel" aria-labelledby="nav-contact-tab">
                                Case summary
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="container border" style="border-radius: 5px">
                <div class="row">
                    <div class="panel panel-default" style="padding: 10px;">
                        <center>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Select Document
                                </button>
                                <ul class="dropdown-menu">
                                    @foreach (var item in Model.document_Master)
                                    {
                                        <li><a class="dropdown-item" href="@item.Document_Path" target="dv_DocView">@item.DocumentName</a></li>
                                    }
                                </ul>
                            </div>
                        </center>
                    </div>
                    <div class="panel panel-default border">
                        <iframe src="" name="dv_DocView" height="410px" width="100%" title="Document View"></iframe>
                    </div>



                </div>
            </div>
        </div>

    </div>

</body>
</html>


